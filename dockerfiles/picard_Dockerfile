# Base image
FROM ubuntu:14.04

# Maintainer 
MAINTAINER Luyi Tian tlytiger@hotmail.com

# Set correct environment variables.
# ENV HOME /root
# ENV DEBIAN_FRONTEND noninteractive

# Update install packages required by picard
RUN apt-get update -y && apt-get install -y \
wget \
default-jre \
unzip

# + picard
RUN wget -O /tmp/picard-tools-1.119.zip http://sourceforge.net/projects/picard/files/picard-tools/1.119/picard-tools-1.119.zip \
    && unzip /tmp/picard-tools-1.119.zip -d /tmp/ \
    && cp -v /tmp/picard-tools-1.119/* /usr/local/bin \
    && export CLASSPATH=/usr/local/bin:$CLASSPATH
  
#Cleanup the temp dir
RUN rm -rf /tmp/*

# Use baseimage-docker's bash.
CMD ["/bin/bash"]

#Clean up APT when done.
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN apt-get autoclean && apt-get autoremove -y && rm -rf /var/lib/{apt,dpkg,cache,log}/