# Base image
FROM ubuntu:14.04

# Maintainer 
MAINTAINER Luyi Tian tlytiger@hotmail.com

# Set correct environment variables.
# ENV HOME /root
# ENV DEBIAN_FRONTEND noninteractive

# Update install packages required by picard
RUN apt-get update -y \
    && apt-get install python-software-properties \
    && add-apt-repository ppa:webupd8team/java \
    && apt-get update -y 
RUN apt-get install -y wget
RUN apt-get install -y openjdk-8-jre
RUN apt-get install -y unzip

# + picard
RUN wget -O /tmp/picard-tools-2.0.1.zip https://github.com/broadinstitute/picard/releases/download/2.0.1/picard-tools-2.0.1.zip \
    && unzip /tmp/picard-tools-2.0.1.zip -d /tmp/ \
    && mkdir /jar \
    && cp -v /tmp/picard-tools-2.0.1/* /jar \
    && export CLASSPATH=/jar:$CLASSPATH
  
#Cleanup the temp dir
RUN rm -rf /tmp/*

# Use baseimage-docker's bash.
CMD ["/bin/bash"]

#Clean up APT when done.
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN apt-get autoclean && apt-get autoremove -y && rm -rf /var/lib/{apt,dpkg,cache,log}/