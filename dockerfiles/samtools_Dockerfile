# Base image
FROM ubuntu:14.04

# Maintainer 
MAINTAINER Luyi Tian tlytiger@hotmail.com

# update source and change timezome
COPY sources.list /etc/apt/sources.list
RUN echo "Asia/Shanghai" > /etc/timezone;

# Update install packages required by samtools
RUN apt-get update -y
RUN apt-get install -y wget
RUN apt-get install -y build-essential
RUN apt-get install -y libz-dev

RUN apt-get install -y \
libncurses5-dev \
libncursesw5-dev

# + samtools 
RUN wget -O /tmp/samtools-1.3.1.tar.bz2 https://github.com/samtools/samtools/releases/download/1.3.1/samtools-1.3.1.tar.bz2 \
    && tar xjvf /tmp/samtools-1.3.1.tar.bz2 -C /tmp/ \
    && cd /tmp/samtools-1.3.1 \
    && make \
    && make prefix=/usr/local install

#Cleanup the temp dir
RUN rm -rf /tmp/*

# Use baseimage-docker's bash.
CMD ["/bin/bash"]

#Clean up APT when done.
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN apt-get autoclean && apt-get autoremove -y && rm -rf /var/lib/{apt,dpkg,cache,log}/