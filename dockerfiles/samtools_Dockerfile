# Base image
FROM ubuntu:14.04

# Maintainer 
MAINTAINER Luyi Tian tlytiger@hotmail.com

# Set correct environment variables.
# ENV HOME /root
# ENV DEBIAN_FRONTEND noninteractive

# Update install packages required by bwa aligner
RUN apt-get update -y && apt-get install -y \
wget \
build-essential 

# + bwa 
RUN wget -O /tmp/samtools-1.3.tar.bz2 http://github.com/samtools/samtools/releases/download/1.3/samtools-1.3.tar.bz2 \
    && tar xjvf /tmp/samtools-1.3.tar.bz2 -C /tmp/ \
    && cd /tmp/samtools-1.3 && make \
    && make prefix=/usr/local install
  
#Cleanup the temp dir
RUN rm -rf /tmp/*

# Use baseimage-docker's bash.
CMD ["/bin/bash"]

#Clean up APT when done.
RUN apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*
RUN apt-get autoclean && apt-get autoremove -y && rm -rf /var/lib/{apt,dpkg,cache,log}/